{% extends "layout.njk" %}
{% block head%}
    <title>Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">
{% endblock %}

{% block content %}
    <header>
      <!-- Parte inicial do site -->
      <div class="links">
        <!-- Agrupa elementos -->
        <a href="/">Miroswd</a>
        <a href="https://discordapp.com/invite/gCRAFhc" target="_blank">Comunidade</a>
        <a href="mailto:oi@rocketseat.com.br">Email</a>
        <a href="tel:+5547992078767">Telefone</a>
      </div>
    </header>

    <div class="tipo-cursos">
      <h1 class="titulo-pagina">{{item.name}}</h1>
    
    {% for item in items %}
      <div id="{{item.name}}" class="curso">
        <img src="{{item.course_url}}" alt="{{item.name}}"/>
        <div class="info-curso">
          <span class="modulos">{{item.modules}}</span>
          <span class="price">{{item.price}}</span>
        </div>
      </div>
    {% endfor %}
    </div>

    <div class="modal-cursos">
      <div class="modal">
        <!-- Background -->
        <div class="modal-tipo-curso">
          <a class="close-modal">
            <i class="material-icons">close</i>
          </a>
        </div>
        <!-- ConteÃºdo -->
        <div class="modal-content-curso">
          <iframe src="" frameborder="0"></iframe>
        </div>
      </div>
    </div>
    
    <script src="script.js"></script>
{% endblock %}